            <property name="CustomIcon" value="poiPartHelper" />
            <property name="Material" value="Mmetal_weak" />
            <property name="StabilitySupport" value="true" />
            <property name="Shape" value="New" />
            <property name="Texture" value="8,8,540,8,536,8" />
            <property name="Model" value="poi_part_helper" />
            <!-- <property name="HandleFace" value="Bottom" /> -->
            <property name="ImposterExclude" value="true" />
            <property name="IsTerrainDecoration" value="false" />
            <property name="LootList" value="playerStorage" />
            <property class="RepairItems">
                <property name="resourceForgedIron" value="6" />
                <property name="resourceMechanicalParts" value="3" />
                <property name="resourceElectricParts" value="4" />
            </property>
            <drop event="Destroy" name="resourceScrapIron" count="10,60" />
            <drop event="Destroy" name="resourceMechanicalParts" count="1,3" />
            <drop event="Destroy" name="resourceElectricParts" count="1,4" />
            <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1" />
            <property name="FilterTags" value="MC_playerBlocks,SC_decor" />
        </block>
    </append>
</config>