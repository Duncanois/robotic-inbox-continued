<config>
    <append xpath="/blocks">
        <block name="cntRoboticInbox">
            <property name="CreativeMode" value="Player" />
            <property name="Class" value="CompositeTileEntity" />
            <property class="CompositeFeatures">
                <property class="TEFeatureStorage">
                    <property name="LootList" value="playerWoodWritableStorage" />
                </property>
                <property class="TEFeatureLockable" />
                <property class="TEFeatureSignable">
                    <property name="FontSize" value="90" />
                    <property name="LineCount" value="3" />
                    <property name="LineWidth" value="0.55" />
                </property>
            </property>

            <!-- added values not included in cntWoodWritableCrate -->
            <property name="TraderStageTemplate" value="electricTier1" />
            <property name="SellableToTrader" value="true" />
            <property name="UnlockedBy" value="craftingRobotics" />
            <property name="CustomIcon" value="cntWasherClosed" />
            <property name="CustomIconTint" value="007fff" />
            <property name="TintColor" value="007fff" />
            <property name="ImposterExchange" value="imposterBlock" param1="176" />

            <!-- adjusted values from cntWoodWritableCrate -->
            <property name="DescriptionKey" value="cntRoboticInboxDesc" />
            <property name="Material" value="Mmetal" />
            <property name="Model" value="@:Entities/LootContainers/washerClosedPrefab.prefab" />
            <property name="EconomicValue" value="150" />
            <drop event="Destroy" name="resourceScrapIron" count="4,8" />
            <drop event="Destroy" name="resourceMetalPipe" count="0,1" />
            <drop event="Destroy" name="resourceMechanicalParts" count="0,2" />
            <drop event="Destroy" name="resourceElectricParts" count="0,3" />
            <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1" />
            <property name="DowngradeBlock" value="cntRoboticInboxInsecure" />

            <!-- original values from cntWoodWritableCrate -->
            <!-- <property name="DescriptionKey" value="cntWoodWritableCrateDesc"/> -->
            <!-- <property name="Material" value="MwoodReinforced" /> -->
            <property name="Shape" value="ModelEntity" />
            <!-- <property name="Model" value="@:Entities/LootContainers/woodWritableCratePrefab.prefab" /> -->
            <property name="WaterFlow" value="permitted" />
            <property name="Path" value="solid" />
            <property name="Place" value="TowardsPlacerInverted" />
            <property name="AllowedRotations" value="Basic90" />
            <!-- <property name="FuelValue" value="300" /> -->
            <!-- <property name="EconomicValue" value="6" /> -->
            <property name="MaxDamage" value="500" />
            <property class="RepairItems">
                <!-- original values -->
                <!-- <property name="resourceWood" value="10" /> -->

                <!-- adjusted values -->
                <property name="resourceForgedIron" value="2" />
                <property name="resourceMetalPipe" value="1" />
                <property name="resourceMechanicalParts" value="3" />
                <property name="resourceElectricParts" value="4" />
            </property>
            <!-- <drop event="Destroy" name="resourceWood" count="1,3" /> -->
            <!-- <drop event="Fall" name="terrDestroyedWoodDebris" count="1" prob="0.75" stick_chance="1" /> -->
            <!-- <property name="DowngradeBlock" value="cntWoodWritableCrateInsecure" /> -->
            <!-- <property class="UpgradeBlock">
                <property name="ToBlock" value="cntIronWritableCrate" />
                <property name="Item" value="resourceForgedIron" />
                <property name="ItemCount" value="10" />
                <property name="UpgradeHitCount" value="4" />
            </property>
            <property name="UpgradeSound" value="place_block_metal" /> -->
            <property name="SortOrder1" value="B106" />
            <property name="SortOrder2" value="0000" />
            <property name="Group" value="Basics,Building,advBuilding" />
            <property name="Tags" value="timecharge" />
            <property name="FilterTags" value="MC_playerBlocks,SC_decor" />
        </block>

        <block name="cntRoboticInboxInsecure">
            <property name="CreativeMode" value="None" />
            <property name="Class" value="CompositeTileEntity" />
            <property class="CompositeFeatures">
                <property class="TEFeatureStorage">
                    <property name="LootList" value="playerWoodWritableStorage" />
                </property>
                <property class="TEFeatureSignable">
                    <property name="FontSize" value="90" />
                    <property name="LineCount" value="3" />
                    <property name="LineWidth" value="0.55" />
                </property>
            </property>

            <!-- added values not included in cntWoodWritableCrateInsecure -->
            <property name="CustomIconTint" value="007fff" />
            <property name="TintColor" value="007fff" />
            <property name="ImposterExchange" value="imposterBlock" param1="176" />
            <property class="UpgradeBlock"> <!-- repair busted lock! -->
                <property name="ToBlock" value="cntRoboticInbox" />
                <property name="Item" value="resourceForgedIron" />
                <property name="ItemCount" value="2" />
                <property name="UpgradeHitCount" value="4" />
            </property>
            <property name="UpgradeSound" value="place_block_metal" />

            <!-- adjusted values from cntWoodWritableCrateInsecure -->
            <property name="Material" value="Mmetal" />
            <property name="CustomIcon" value="cntWasherOpen" />
            <property name="Model" value="@:Entities/LootContainers/washerOpenPrefab.prefab" />
            <drop event="Destroy" name="resourceScrapIron" count="4,8" />
            <drop event="Destroy" name="resourceMetalPipe" count="0,1" />
            <drop event="Destroy" name="resourceMechanicalParts" count="0,2" />
            <drop event="Destroy" name="resourceElectricParts" count="0,3" />
            <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1" />

            <!-- original values from cntWoodWritableCrateInsecure -->
            <!-- <property name="CustomIcon" value="cntWoodWritableCrate" /> -->
            <!-- <property name="Material" value="MwoodReinforced" /> -->
            <property name="Shape" value="ModelEntity" />
            <!-- <property name="Model" value="@:Entities/LootContainers/woodWritableCratePrefab.prefab" /> -->
            <property name="WaterFlow" value="permitted" />
            <property name="AllowedRotations" value="Basic90" />
            <property name="Path" value="solid" />
            <property name="MaxDamage" value="500" />
            <property class="RepairItems">
                <!-- original -->
                <!-- <property name="resourceWood" value="10" /> -->

                <!-- adjusted -->
                <property name="resourceForgedIron" value="2" />
                <property name="resourceMetalPipe" value="1" />
                <property name="resourceMechanicalParts" value="3" />
                <property name="resourceElectricParts" value="4" />
            </property>
            <!-- <drop event="Destroy" name="resourceWood" count="1,3" /> -->
            <!-- <drop event="Fall" name="terrDestroyedWoodDebris" count="1" prob="0.75" stick_chance="1" /> -->
            <property name="SortOrder1" value="B106" />
            <property name="SortOrder2" value="0001" />
            <property name="FilterTags" value="MC_playerBlocks,SC_decor" />
        </block>
    </append>
</config>